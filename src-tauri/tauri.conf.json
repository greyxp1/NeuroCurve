{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "neurocurve",
  "version": "0.1.0",
  "identifier": "com.neurocurve.app",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "NeuroCurve",
        "width": 1140,
        "height": 535,
        "minWidth": 1140,
        "minHeight": 535,
        "resizable": true,
        "decorations": false,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
