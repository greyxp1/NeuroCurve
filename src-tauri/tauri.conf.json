{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "neurocurve",
  "version": "1.0.2",
  "identifier": "com.neurocurve.app",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "NeuroCurve",
        "width": 1140,
        "height": 620,
        "minWidth": 1140,
        "minHeight": 620,
        "resizable": true,
        "decorations": false,
        "transparent": true,
        "shadow": false,
        "center": true,
        "theme": "Dark",
        "hiddenTitle": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.ico"
    ]
  }
}
